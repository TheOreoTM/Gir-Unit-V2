{
  "extends": "@sapphire/ts-config",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "#config": ["lib/utility/config.ts"],
      "#constants": ["lib/utility/constants.ts"],
      "#lib/*": ["lib/*"],
      "#root/*": ["*"]
    },
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "esModuleInterop": true,
    "ignoreDeprecations": "5.0"
  },
  "include": ["src"]
}
